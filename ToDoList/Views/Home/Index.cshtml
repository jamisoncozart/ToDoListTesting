@using ToDoList.Models;

<!DOCTYPE html>
<html>
  <head>
    <title>ToDoList</title>
  </head>
  <body>
    <h1>To Do List</h1>
    <a href="/items/new">Add a new item.</a>
    @if(Model.Count == 0)
    {
      <p>There are no items in the todo list yet!</p>
    }
    <ul>
      @foreach (Item item in Model)
      {
        <li>@item.Description</li>
      }
    </ul>
  </body>  
</html>
